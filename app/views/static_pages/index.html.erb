<div class="container">
  <h4> Cost of Ownership Comparison </h4>
  <div>
    <div class="car-form">
      <div class="row">
        <div>
          <%= form_tag(models_path, :method => 'get', :id => 'make', :remote => true ) do |f| %>
            <div class="input-field col s12 l4">
              <%= select_tag "make_id", options_from_collection_for_select(@makes, "edmund_id", "name") %>
              <label>Make</label>
            </div>
          <% end %>
        </div>
        <div id="make-models">
          <div class="input-field col s12 l4" id="make-models">
            <%= select_tag "model_id", "model" %>
            <label>Model</label>
          </div>
        </div>
        <div id="model-years">
          <div class="input-field col s12 l4">
            <%= select_tag "year_id", "year" %>
            <label>Year</label>
          </div>
        </div>
      </div>
      <%= form_tag(tco_path, :method => 'get', :id => 'style_form', :remote => true ) do |e| %>
        <div class="row">
          <div id="year-styles">
            <div class="input-field col s12 l6">
              <%= select_tag "style_id", "style", :disabled => true %>
              <label>Style</label>
            </div>
          </div>
          <div class="input-field col s12 l3">
            <input id="zipcode" type="text" class="validate">
            <label for="zipcode">Zipcode</label>
          </div>
          <div class="input-field col s12 l3">
            <input id="state_code" type="text" class="validate">
            <label for="state_code">State (e.g. UT)</label>
          </div>
        </div>
        <div class="row center-align">
          <a id="submit_style" class="waves-effect waves-light red darken-3 btn">get tco</a>
        </div>
      <% end %>
    </div>
  </div>
  <p>Edmund's TCO Disclaimers....</p>
</div>

<div id="results" class="container">
</div>
