<div class="container">
  <h4> Cost of Ownership Comparison </h4>
  <div>
    <div class="row">
      <div>
        <%= form_tag(models_path, :method => 'get', :id => 'make', :remote => true ) do |f| %>
        <div class="input-field col s12 l3">
          <%= select_tag "make_id", options_from_collection_for_select(@makes, "edmund_id", "name") %>
          <label>Make</label>
        </div>
        <% end %>
      </div>
      <div id="make-models">
        <div class="input-field col s12 l3" id="make-models">
          <%= select_tag "model_id", "model" %>
          <label>Model</label>
        </div>
      </div>
      <div id="model-years">
        <div class="input-field col s12 l2">
          <%= select_tag "year_id", "year" %>
          <label>Year</label>
        </div>
      </div>
      <div id="year-styles">
        <div class="input-field col s12 l2">
          <%= select_tag "Style", "Style", :disabled => true %>
          <label>Style</label>
        </div>
      </div>
      <div class="input-field col s12 l2">
        <input id="zipcode" type="text" class="validate" disabled>
        <label for="first_name">Zipcode</label>
      </div>
    </div>
  <p>Edmund's TCO Disclaimers....</p>
</div>
